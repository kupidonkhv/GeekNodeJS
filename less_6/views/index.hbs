<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{{title}}</title>

    <script src="/js/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="/css/bootstrap-theme.min.css">

    <link rel="stylesheet" href="/css/custom.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="/js/html5shiv.min.js"></script>
    <script src="/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Привет, Усернэйм</h1>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">

        <div class="col-lg-6">
            <a href="/post/">список статей</a>
        </div>

        <div class="col-lg-6">
            <a href="/post/add">добавить статью</a>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">

            {{#if index}}index
                {{#each articles}}
                        <h2><a href="/post/{{id}}">{{name}}</a></h2>
                        <p>{{content}}</p>

                    <form method="GET" action="/post/edit/{{id}}">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Редактировать</button>
                        </div>
                    </form>

                    <form method="POST" action="/post/delete/{{id}}">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default" onclick="return confirmDelete();">Удалить</button>
                        </div>
                    </form>

                        <hr />
                {{/each}}
            {{/if}}

            {{#if view}}view
                    {{#with article}}
                        <h2>{{name}}</h2>
                        <p>{{content}}</p>
                        <p class="small">Опубликовано: {{user_id}}</p>

                        <form method="GET" action="/post/edit/{{id}}">
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Редактировать</button>
                            </div>
                        </form>
                    {{/with}}
            {{/if}}

            {{#if addform}}addform
                <form method="POST" action="/post/add/">
                    <div class="form-group">
                        <label for="name">name</label>
                        <input type="text" class="form-control" id="name" placeholder="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="content">content</label>
                        <input type="text" class="form-control" id="content" placeholder="content" name="content" required>
                    </div>
                    <div class="form-group">
                        <label for="content">user_id</label>
                        <input type="text" class="form-control" id="user_id" placeholder="user_id" name="user_id" value="1" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Добавить</button>
                    </div>
                </form>
            {{/if}}

            {{#if editform}}editform

                {{#with article}}
                    <form method="POST" action="/post/edit/{{id}}">
                        <div class="form-group">
                            <label for="name">name</label>
                            <input type="text" class="form-control" id="name" placeholder="name" name="name" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <label for="content">content</label>
                            <input type="text" class="form-control" id="content" placeholder="content" name="content" value="{{content}}">
                        </div>
                        <div class="form-group">
                            <label for="content">user_id</label>
                            <input type="text" class="form-control" id="user_id" placeholder="user_id" name="user_id" value="{{user_id}}">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Сохранить</button>
                        </div>
                    </form>
                {{/with}}
            {{/if}}



        </div>
    </div>

    <hr>

    <footer>
        <p>&copy; 2016 Генератор микроботов инкорпорейтед</p>
    </footer>
</div> <!-- /container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Latest compiled and minified JavaScript -->
<script src="/js/bootstrap.min.js"></script>

<script type="text/javascript">
    function confirmDelete() {
        if (confirm("Вы подтверждаете удаление?")) {
            return true;
        } else {
            return false;
        }
    }

</script>


</body>
</html>